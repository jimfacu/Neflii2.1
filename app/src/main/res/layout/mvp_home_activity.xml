<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeActivity.MVPView_HomeActivity"
android:background="@color/fondo_homeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:id="@+id/Buscador"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/activityHome_FilmsSupscriptos" >

    <EditText
        android:id="@+id/activityHome_editText_SearchMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/NegroToolbar_homeActivity"
        android:gravity="center"
        android:hint="@string/Tv"
        android:textSize="@dimen/textSize20"
        android:textColorHint="@color/LetrasBuscador_homeActivity"
        android:textColor="@color/Blanco"
        android:layout_weight="99"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/NegroToolbar_homeActivity"
        android:src="@drawable/ic_search_black_24dp"
        android:id="@+id/activityHome_lupa"
        android:layout_weight="1"/>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activityHome_FilmsSupscriptos"
        android:layout_marginTop="@dimen/marginTop20"
        android:text="Supscriptos"
        android:textStyle="bold"
        android:textSize="@dimen/textSize20"
        android:textColor="@color/letraCategoria_homeActivity"
        app:layout_constraintTop_toBottomOf="@id/Buscador"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activityHome_recyclerViewFilmsSups"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/activityHome_recyclerViewFilmsSups"
        android:layout_marginTop="@dimen/marginTop20"
        app:layout_constraintTop_toBottomOf="@+id/activityHome_FilmsSupscriptos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activityHome_Category"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activityHome_Category"
    android:layout_marginTop="@dimen/marginTop20"
    android:text="@string/TODOS"
    android:textStyle="bold"
    android:textSize="@dimen/textSize20"
    android:textColor="@color/letraCategoria_homeActivity"
    app:layout_constraintTop_toBottomOf="@id/activityHome_recyclerViewFilmsSups"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/swipeAndRecycler"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/swipeAndRecycler"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/activityHome_Category"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeToRefresh">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activityHome_recyclerView"
            android:layout_marginTop="@dimen/marginTop20"
            app:layout_constraintTop_toBottomOf="@id/activityHome_Category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

